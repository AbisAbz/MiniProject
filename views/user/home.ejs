    background-position: center;
    background-repeat: no-repeat;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgb(45, 41, 41);

}
.mainbox{
    border-radius: 30px;
    background-color: white;
    display: flex;
    align-items: center;
    justify-content: center;
}
.box{
    box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
